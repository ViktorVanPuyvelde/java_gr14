<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root fx:id="hBox" alignment="TOP_LEFT" fillHeight="false" spacing="100.0" type="HBox" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0">
         <children>
            <Label text="Datasources" textFill="#b2d234">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Button id="createBtn" fx:id="create_btn" mnemonicParsing="false" onAction="#create_OnAction" styleClass="Button" text="Nieuwe datasource aanmaken" />
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <HBox prefHeight="186.0" prefWidth="400.0">
                     <children>
                        <Pane prefHeight="100.0" prefWidth="114.0">
                           <children>
                              <Label layoutX="22.0" layoutY="85.0" text="Datasources :" />
                           </children>
                        </Pane>
                        <Pane prefHeight="210.0" prefWidth="295.0">
                           <children>
                              <ListView fx:id="datasource_List" prefHeight="186.0" prefWidth="270.0" />
                           </children>
                        </Pane>
                     </children>
                  </HBox>
                  <Label fx:id="datasource_Selecteren_lbl" alignment="CENTER" textFill="RED">
                     <VBox.margin>
                        <Insets left="35.0" />
                     </VBox.margin></Label>
               </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="84.0" prefWidth="400.0" spacing="40.0">
               <children>
                  <Button fx:id="view_btn" mnemonicParsing="false" onAction="#view_OnAction" styleClass="Button" text="Raadplegen" />
                  <Button fx:id="edit_btn" mnemonicParsing="false" onAction="#edit_OnAction" styleClass="Button" text="Aanpassen" />
                  <Button id="deleteBtn" fx:id="delete_btn" mnemonicParsing="false" onAction="#delete_OnAction" styleClass="Button" text="Verwijderen" />
               </children>
               <VBox.margin>
                  <Insets top="-40.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets left="80.0" top="60.0" />
   </padding>
</fx:root>
