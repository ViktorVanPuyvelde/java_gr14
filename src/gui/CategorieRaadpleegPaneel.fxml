<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="TOP_CENTER" spacing="30.0" stylesheets="@Styles.css" type="VBox" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Raadplegen Categorie" textFill="#b2d234">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <HBox spacing="15.0">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
            <Label prefWidth="85.0" text="Id:">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <Label fx:id="id_lbl" alignment="TOP_LEFT">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox spacing="15.0">
         <children>
            <Label prefWidth="85.0" text="Naam:">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <Label fx:id="naam_lbl" alignment="TOP_LEFT">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox spacing="15.0">
         <children>
            <Label prefWidth="85.0" text="Pictogram:">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <Label fx:id="icon_lbl" alignment="TOP_LEFT">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox spacing="15.0">
         <children>
            <Label prefWidth="85.0" text="Rollen:">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <Label fx:id="rollen_lbl" alignment="TOP_LEFT">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox fx:id="sdg_hbox" spacing="15.0">
         <children>
            <Label prefWidth="85.0" text="SDG's:">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <ListView fx:id="sdg_list" prefHeight="200.0" prefWidth="200.0" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets left="70.0" top="10.0" />
   </padding>
</fx:root>
